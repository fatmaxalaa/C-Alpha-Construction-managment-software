@model IEnumerable<Resources.Models.Resource>

@{
    ViewData["Title"] = "Resources";
       Layout = "~/Views/Shared/_ AdminLayoutPage.cshtml";
}




@section PageSec{
    <section class="home-section" id="home">
        <div class="home-content">
            <p style="margin-top:10px;">
                <a asp-action="Create" asp-controller="Resource" class="bttn">Create<i class="fa-light fa-plus"style="font-size:25px; "></i></a>
            </p>
            <table class="mt-3 table table-striped text-center"  >
                 <thead class="thead-dark">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ResourceType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CostPerDay)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UnitsPerDay)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Duration )
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TotalCost)
                        </th>
                          <th>
                            @Html.DisplayNameFor(model => model.TaskName )
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ResourceType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CostPerDay)
                        </td>
                            <td>
                            @Html.DisplayFor(modelItem => item.UnitsPerDay)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Duration )
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalCost)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TaskName )
                        </td>
                        <td>

                            <a asp-action="Edit" asp-route-id="@item.ResourceId" ><i class="fa-solid fa-pen-to-square text-primary " style="font-size:20px;"></i> </a> 
                            <a asp-action="Details" asp-route-id="@item.ResourceId" ><i class="fa-solid fa-circle-info text-info ml-2" style="font-size:20px;"></i> </a> 
                            <a asp-action="Delete" asp-route-id="@item.ResourceId" ><i class="fa-solid fa-trash-can text-danger ml-2" style="font-size:20px;"></i> </a>
                        </td>
                    </tr>
            }   
            </table>
        </div>
      </section>
}

