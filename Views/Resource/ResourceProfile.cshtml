@using Newtonsoft.Json

@using Microsoft.AspNetCore.Mvc;
@using Resources.Models;
@using Resources.Controllers;
@{
    ViewData["Title"] = "Resoource Profile Report";
    Layout = "~/Views/Shared/_ AdminLayoutPage.cshtml";
}
<head>
	<script src="//cdn.fusioncharts.com/fusioncharts/latest/fusioncharts.js"></script>
  <script src="//cdn.fusioncharts.com/fusioncharts/latest/fusioncharts.widgets.js"></script>   
    <script src="//cdn.fusioncharts.com/fusioncharts/latest/themes/fusioncharts.theme.fusion.js"></script>
</head>
@section PageSec{
    <script src="//cdn.fusioncharts.com/fusioncharts/latest/fusioncharts.js"></script>
  <script src="//cdn.fusioncharts.com/fusioncharts/latest/fusioncharts.widgets.js"></script>   
    <script src="//cdn.fusioncharts.com/fusioncharts/latest/themes/fusioncharts.theme.fusion.js"></script>
    <section class="home-section" id="home">
        <div class="home-content" id="GFG">
    
                      
                        <div  >
                             <button class="mt-3" onclick="printDiv()" style="border:none; background:none; position:relative; left:94% ">
                                <img src="~/images/icons8-acrobat-67.png" style="width=50px; height:50px;"/>
                            </button>
                            <hr />
                           
                            <div class="text-dark " style="text-align:center;"> 
                              <h3 class="projectName">The Resource Usage Profie For @ViewBag.resname</h3>  
                              <hr/>
                            </div>
                            <div>
                                @Html.DropDownList("options",null,new{onchange="document.location.href='/Resource/ResourceProfile?Name='+this.value;"})
                            </div>
                            <div>
                                <div class="mt-4" style="border-width:2px;border-color:black;margin-top:auto; text-align:center;" id="chartContainer">@Html.Raw(ViewData["Chart2"])</div>
                            </div>
                         </div>
          </div>
    </section>
     <script>
        function printDiv() {
            var divContents = document.getElementById("GFG").innerHTML;
            var a = window.open('', '', 'height=1000, width=1000');
        
            a.document.write('<html>');
            a.document.write('<body > ');
            a.document.write(divContents);
            a.document.write('</body></html>');
            a.document.close();
            a.print();
        }
    </script>
 }