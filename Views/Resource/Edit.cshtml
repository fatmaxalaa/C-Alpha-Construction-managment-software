@model Resources.Models.Resource

@{
    ViewData["Title"] = "Edit Resource";
    Layout = "~/Views/Shared/_ AdminLayoutPage.cshtml";
}
 @{ List<string> options = (List<string>)ViewBag.actsoptions;}
left
@section PageSec{
    <section class="home-section" id="home">
        <div class="home-content">    
                     <div class="container p-3 mt-4 border "  style="box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;">
                        <h1  class="projectName mt-3">Edit <span>Resource</span></h1>
                        <div class="col-md-4 mt-4">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group mt-4">
                                    <label asp-for="Title" class="control-label"></label>
                                    <input asp-for="Title" class="form-control" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <input type="hidden" asp-for="ResourceId" />
                                <div class="form-group mt-4">
                                    <label asp-for="ResourceType" class="control-label"></label>
                                    <select asp-for="ResourceType" class="form-control"
                                        id="Id" name="ResourceType">
                                            <option>Labor</option> 
                                      <option>Non_Labor</option>
                              <option>Material</option> 
                    
                                    </select>
                                    <span asp-validation-for="ResourceType" class="text-danger"></span>
                                </div>
                                <div class="form-group mt-4">
                                    <label asp-for="CostPerDay" class="control-label"></label>
                                    <input asp-for="CostPerDay" class="form-control" />
                                    <span asp-validation-for="CostPerDay" class="text-danger"></span>
                                </div>
                                  <div class="form-group mt-4">
                                    <label asp-for="UnitsPerDay" class="control-label"></label>
                                    <input asp-for="UnitsPerDay" class="form-control" />
                                    <span asp-validation-for="UnitsPerDay" class="text-danger"></span>
                                </div>
                                <div class="form-group mt-4">
                                    <label asp-for="Duration " class="control-label"></label>
                                    <input asp-for="Duration " class="form-control" />
                                    <span asp-validation-for="Duration " class="text-danger"></span>
                                </div>
                                <div class="form-group mt-4">
                                    <label asp-for="TaskName " class="control-label"></label>
                                                <select asp-for="TaskName" class="form-control" />  
                                                <option>TaskName</option>
                                    @foreach(var item in options)
                                    {
                                         <option value="@item">@item</option>
                    
                                    }
                    
                                   
                                    <span asp-validation-for="TaskName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Save" class="bttn" />                               
                                     <a asp-action="Index"class="bttn mr-3 px-3"> <i class="fa-solid fa-circle-left"></i> </a>
                               
                                </div>
                            </form>
                        </div>
                        
                   
                   
                    </div>
                    
                    
                    
                </div>
                </section>
}







