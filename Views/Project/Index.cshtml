@{
}
@using System.Collections

@{
    ViewData["Title"] = "Project";
    Layout = "~/Views/Shared/_ AdminLayoutPage.cshtml";
}
@model IEnumerable<Resources.Models.Project>
@section PageSec{
    <section class="home-section" id="home">
        <div class="home-content">
            <div class="mt-5">
                <a asp-action="AddOrEdit" asp-controller="Project" class="bttn">Add New Project</a>
            </div>
            <table class="mt-4 table table-striped text-center " >
                            <thead class="thead-dark">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ID)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Location)
                                    </th>
                                      <th>
                                        @Html.DisplayNameFor(model => model.ManagerName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.OwnerName)
                                    </th>
                                     <th>
                                        @Html.DisplayNameFor(model => model.ProjectStartDate)
                                    </th>
                                   
                                    <th></th>
                                    

                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ID)
                                    </td>
                
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Location)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ManagerName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OwnerName)
                                    </td>
                                     <td>
                                        @Html.DisplayFor(modelItem => item.ProjectStartDate)
                                    </td>
                                  
          
                                    <td>
                                    
                                        <a asp-action="AddOrEdit"   asp-route-employeeId ="@item.ID"><i class="fa-solid fa-pen-to-square text-primary" style="font-size:20px;"></i></a>
                                
                                 
                                        <a asp-action="Details"   asp-route-employeeId="@item.ID"><i class="fa-solid fa-circle-info text-info ml-2" style="font-size:20px;"></i></a>
                                  
                            
                                        <a asp-action="Delete"  asp-route-ID ="@item.ID"><i class="fa-solid fa-trash-can text-danger ml-2 " style="font-size:20px;"></i></a>
                             
               
                                    </td>
                                </tr>
                                }
                            </tbody>
            </table>
        </div>
                       
    </section>
}
