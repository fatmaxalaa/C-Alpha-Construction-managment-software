@model Resources.Models.Register

@{
    ViewData["Title"] = "Create";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css">
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />



<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                 <div class="card text-black" style="border-radius: 25px;">
                     <div class="card-body p-md-5">
                         <div class="row justify-content-center">
                              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4 text-dark" >Register</p>
                                    <form asp-action="Register" class="mx-1 mx-md-4">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                          <i class="fas fa-envelope fa-lg mt-4 fa-fw"></i>
                                         <label asp-for="Email" class="form-label"></label>
                                         
                                        <div class="form-group d-flex flex-row mb-4">
                                          
                                           
                                            <input asp-for="Email" class="form-control flex-fill mb-0 p-2" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                         <i class="fas fa-lock fa-lg mt-4 fa-fw"></i>
                                         <label asp-for="Password" class="control-label"></label>
                                        <div class="form-group">
                                            
                                            <input asp-for="Password" class="form-control" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                        <i class="fas fa-key fa-lg mt-4 fa-fw"></i>
                                        <label asp-for="ConfirmPassword" class="control-label"></label>
                                        <div class="form-group">
                                     
                                            <input asp-for="ConfirmPassword" class="form-control" />
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>

                                        <div class="form-check justify-content-center mb-5">
                                            <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3c" />
                                            <label class="form-check-label" for="form2Example3">
                                                I agree all statements in <a href="#!">Terms of service</a>
                                            </label>
                                        </div>
                                        <div class="form-group mb-3 mb-lg-4">
                                            <input type="submit" value="Register" class="btn btn-outline-primary" />
                                        </div>
                                        <div>
                                            <a asp-controller="WelcomePage" asp-action="Index"> Back to Home</a>
                                        </div>
                                    </form>
                             </div>
                               <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                    <img src="~/images/Register.png" class="img-fluid" alt="Sample image">

                             </div>                                 
                       </div>
                   </div>
               </div>
            </div>
        </div>
    </div>
</section>



