@model IEnumerable<Resources.Models.Crashing>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ AdminLayoutPage.cshtml";
}
@section PageSec{
     <section class="home-section">
        <div class="home-content">
          

          <div class=" mt-5" >
                <div >
                <a asp-action="Create" class="bttn">Create<i class="fa-light fa-plus"style="font-size:25px; "></i></a>
                <a asp-action="Calc_Te" asp-controller="Crashes"  class="bttn">Total Expected Time</a>
                </div>

            <table class="mt-3 table table-striped text-center"  >
                 <thead class="thead-dark">
                    <tr>
                         <th>
                            @Html.DisplayNameFor(model => model.TaskName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OptimisticDuration)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MostLikelyDuration)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PessimesticDuration)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ExpectedTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TaskId)
                        </th>
                       @* <th>
                            @Html.DisplayNameFor(model => model.Te)
                        </th>*@
                        <th></th>
                       
                       
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model) {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TaskName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OptimisticDuration)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MostLikelyDuration)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PessimesticDuration)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ExpectedTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TaskId)
                                </td>
                               @*<td>
                                          @Html.DisplayFor(modelItem => item.Te)
                                </td>*@
           
                                    @*<td>@Model.Sum(x => x.ExpectedTime)</td>*@
                                   @* <td>@Model.Sum(s => s.Te)</td>*@
                                <td>
                                    
                                    <a asp-action="Edit" asp-route-id="@item.Id" ><i class="fa-solid fa-pen-to-square text-primary" style="font-size:20px;"></i> </a> 
                                   
                                    <a asp-action="Details" asp-route-id="@item.Id" ><i class="fa-solid fa-circle-info text-info ml-2" style="font-size:20px;"></i> </a> 
                                    
                                   
                                    <a asp-action="Delete" asp-route-id="@item.Id" ><i class="fa-solid fa-trash-can text-danger ml-2 " style="font-size:20px;"></i> </a>

                                </td>
                            </tr>
                    }
                </tbody>
            </table>
            
         </div>
     </div>
     
 </section>
 
} 
